pipeline {
    agent any
    
    tools {
        maven 'MAVEN_HOME'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/username/your-web-project.git'
            }
        }

        stage('Build WAR') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        success {
            echo "ğŸ‰ Web Application Build Success â€” WAR Created!"
        }
        failure {
            echo "âŒ Build Failed! Check Logs!"
        }
    }
}
